<?xml version="1.0"?>
<launch>
  <arg name="port" default="$(optenv HUSKY_PORT /dev/boller_base)" />

  <!-- Husky harware driver -->
  <node pkg="boller_base" type="boller_base_node" name="boller_base_node" output="screen">
    <param name="address" type="string" value="192.168.0.7" />
    <param name="port" type="int" value="20001" />
    <param name="can_id" type="int" value="1" />
    <remap from="boller_velocity_controller/cmd_vel" to="key_vel"/>
    <remap from="boller_velocity_controller/odom" to="odom"/>
  </node>

  <!--     <node pkg="turtlesim" type="turtle_teleop_key" name="turtle_teleop_key">
  <remap from="turtle1/cmd_vel" to="cmd_vel"/>
  </node> -->

  <!-- Differential controller parameters and basic localization -->
  <include file="$(find boller_control)/launch/control.launch" />

  <!--Teleop -->
  <!-- <include file="$(find boller_control)/launch/teleop.launch" /> -->
  <!-- node name="rviz" pkg="rviz" type="rviz" args="-d $(find boller_description)/rviz/view.rviz" / -->
</launch>
